{
  "manifest_version": 3,
  "name": "CS2 Parser",
  "version": "1.0",
  "permissions": ["cookies", "storage", "alarms", "webNavigation", "notifications", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "images/16.png",
    "128": "images/128.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "externally_connectable": {
    "matches": ["<all_urls>"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"], // This injects the script on all webpages (adjust as needed)
      "js": ["content.js"]
    }
  ]
}